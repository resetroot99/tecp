{
  "name": "@tecp/core",
  "version": "0.1.0",
  "description": "TECP Core - Cryptographic receipt signing and verification",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "cbor-x": "^1.5.5",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"]
  },
  "keywords": [
    "tecp",
    "cryptographic-receipts",
    "ephemeral-computing",
    "cbor",
    "ed25519"
  ],
  "license": "Apache-2.0"
}
