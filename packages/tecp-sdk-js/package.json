{
  "name": "@tecp/sdk",
  "version": "0.1.0",
  "description": "TECP SDK for JavaScript/TypeScript - Create and verify ephemeral computation receipts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "tecp",
    "ephemeral-computation",
    "privacy",
    "cryptographic-receipts",
    "zero-trust",
    "compliance"
  ],
  "author": "TECP Protocol Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tecp-protocol/tecp.git",
    "directory": "packages/tecp-sdk-js"
  },
  "dependencies": {
    "@tecp/core": "workspace:*",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
