{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "packages/tecp-reference-ui/dist",
  "functions": {
    "api/ledger/index.ts": {
      "memory": 1024,
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/ledger/(.*)",
      "destination": "/api/ledger"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/tecp-reference-ui/dist/$1"
    }
  ],
  "env": {
    "PORT": "3001",
    "DB_PATH": "/tmp/ledger.db"
  }
}