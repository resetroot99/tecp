{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "packages/tecp-reference-ui/dist",
  "builds": [
    {
      "src": "packages/tecp-reference-ui/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "services/tecp-ledger/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["services/tecp-ledger/src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/ledger/(.*)",
      "dest": "/services/tecp-ledger/src/index.ts",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/packages/tecp-reference-ui/dist/$1",
      "continue": true
    }
  ],
  "env": {
    "PORT": "3001",
    "DB_PATH": "/tmp/ledger.db"
  }
}