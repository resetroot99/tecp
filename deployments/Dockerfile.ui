# TECP Reference UI Dockerfile
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY packages/tecp-reference-ui/package*.json ./packages/tecp-reference-ui/
COPY packages/tecp-reference-ui/tsconfig*.json ./packages/tecp-reference-ui/
COPY packages/tecp-reference-ui/vite.config.ts ./packages/tecp-reference-ui/

# Install dependencies
RUN cd packages/tecp-reference-ui && npm ci

# Copy source code
COPY packages/tecp-reference-ui/src ./packages/tecp-reference-ui/src
COPY packages/tecp-reference-ui/index.html ./packages/tecp-reference-ui/
COPY packages/tecp-reference-ui/public ./packages/tecp-reference-ui/public

# Build the application
RUN cd packages/tecp-reference-ui && npm run build

# Production stage - serve with nginx
FROM nginx:alpine AS production

# Copy built application
COPY --from=builder /app/packages/tecp-reference-ui/dist /usr/share/nginx/html

# Copy nginx configuration
COPY deployments/nginx.conf /etc/nginx/nginx.conf

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:80/ || exit 1

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
