# TECP Enterprise Gateway Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
API_KEY_HEADER=x-tecp-api-key
CORS_ORIGINS=http://localhost:3000,https://tecp.dev

# LLM Provider Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
OPENAI_BASE_URL=https://api.openai.com
ANTHROPIC_BASE_URL=https://api.anthropic.com

# TECP Features
POLICY_ENFORCEMENT_ENABLED=true
RECEIPT_GENERATION_ENABLED=true
DEFAULT_POLICIES=no_retention,audit_trail

# Transparency Log
TRANSPARENCY_LOG_URL=http://localhost:3002
TRANSPARENCY_LOG_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true

# PII Detection & Protection
PII_DETECTION_ENABLED=true
PII_REDACTION_ENABLED=false
